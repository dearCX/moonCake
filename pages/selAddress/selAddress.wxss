/* pages/mySubmit/mySubmit.wxss */
.my-container{
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: #2d3153;
}
.content{
  width: 100%;
  padding-bottom: 50px;
}
.total{
  height: 54px;
  line-height: 54px;
  background-color: #303355;
  font-size: 14px;
  color: #FCCB1C;
  text-align: center;
}
.total text{
  color: #fff;
  font-size: 15px;
  margin: 0 3px;
}
.address-list{
  background-color: #303355;
}
.address-item{
  height: 90px;
  border-top:1px solid #666;
}
.info{
  float: left;
  width: 60%;
  padding: 0 16px;
  margin-top: 8px;
  font-size: 12px;
  color: #fff;
}
.name{
  font-size: 14px;
  margin-right: 7px;
}
.phone{
  color: #B8B9C1;
}
.address{
  margin-top: 8px;
}
.openrate-btn{
  float: left;
  width: 58px;
  height: 90px;
  margin-left: 3%;
  background-color: #35385A;
  text-align: center;
  color: #fff;
}
.openrate-btn view{
  height: 30px;
}
.openrate-btn view image{
  width: 13px;
  height: 13px;
}
.openrate-btn view image.minus{
  height: 3px;
}
.to-edit{
  float: right;
  width: 30px;
  height: 40px;
  margin-top: 36px;
}
.to-edit image{
  width: 8px;
  height: 15px;
}
.add-address{
  height: 54px;
  line-height: 54px;
  border-top:1px solid #666;
  border-bottom:1px solid #666;
  color: #fff;
  font-size: 14px;
}
.add-icon{
  width: 20px;
  height: 20px;
  margin: 0 15px;
  vertical-align: middle;
}
.add-address .to-edit{
  margin-top: 5px;
}
.submit-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 60;
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #FCCB1C;
  font-family: FZZZHONGJW--GB1-0;
  font-size: 16px;
  color: #2D3153;
  letter-spacing:10px;
  border-radius: 0;
}
.info-container{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 90;
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: rgba(0,0,0,.6)
}
.info-container image{
  width: 70%;
  margin-top: 163px;
}
.info-content{
  position: absolute;
  left: 0;
  top: 0;
  width: 60%;
  padding: 0 22% 0 18%;
  text-align: center;
  margin-top: 277px;
}
.info-content view{
  margin-bottom: 30px;
  color: #2D3153;
  font-size: 16px;
  font-family: 'AdobeHeitiStd-Regular';
}