/* pages/myTrack/myTrack.wxss */
.my-container{
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: #2d3153;
  box-sizing: border-box;
}
.track-item{
  height: 126px;
  border-bottom: 1px solid #666;
  padding: 0 15px;
}
.info-container{
  overflow: hidden;
}
.info{
  float: left;
  width: 70%;
  padding: 0 16px;
  margin-top: 13px;
  font-size: 12px;
  color: #fff;
}
.name{
  font-size: 14px;
  margin-right: 7px;
}
.phone{
  color: #B8B9C1;
}
.address{
  margin-top: 5px;
}
.one-total{
  float: right;
  height: 42px;
  margin-top: 15px;
  margin-right: 8px;
  padding-top: 13px;
  border-left:1px solid #666;
  font-size: 16px;
  color: #FCCB1C;
}
.one-total text{
  display: inline-block;
  min-width: 30px;
  text-align: right;
}
.track{
  height: 32px;
  line-height: 32px;
  padding-left: 10px;
  margin-top: 5px;
  background-color: #35385E;
  color: #FCCB1C;
  font-size: 12px;
}
.track text{
  color: #fff;
}
.copy-btn{
  float: right;
  width: 45px;
  padding: 0;
  margin-top: 5px;
  margin-right: 5px;
  height: 22px;
  line-height: 22px;
  border-radius: 3px;
  background-color: #FCCB1C;
  color: #303355;
  font-size: 12px;
}