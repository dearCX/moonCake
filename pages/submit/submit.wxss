/* pages/submit/submit.wxss */
.container{
  font-size:12px;
}
.banner-container{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 60;
  width: 100%;
  background-color: #fff;
}
.banner{
  width: 100%;
}
.sel-number{
  height: 52px;
  line-height: 52px;
  font-size:14px;
  color: #333;
}
.sel-number>span{
  margin-left: 15px;
}
.sel-number div{
  float: right;
  margin-right: 26px;
}
.sel-number div span{
  display: inline-block;
  min-width: 30px;
  text-align: center;
  margin: 0 5px;
  color: #FCCB1C;
  font-size:14px;
}
.sel-number div image{
  vertical-align: middle;
}
.minus{
  width: 28px;
  height: 28px;
}
.add{
  width: 28px;
  height: 28px;
}
.main-container{
  padding-top: 250px;
}
.rule-bg{
  position: relative;
  width:100%;
}
.rule-container-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.rule-content{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 30;
  width: 100%;
}
.title{
  width: 100%;
  padding: 17px 10px 10px 10px;
}
.title image{
  width: 10px;
  height: 10px;
}
.title span{
  font-size: 12px;
  color: #FCCB1C;
  padding-left: 6px;
}
.rule-container{
  width: 100%;
  padding: 0 10px;
  font-size:12px;
}
.rule{
  position: relative;
  width: 100%;
  overflow: hidden;
  margin-bottom: 10px;
}
.rule image{
  position: absolute;
  left: 0;
  top: 0;
  width: 12px;
  height: 12px;
}
.rule text{
  float:left;
  padding: 0 20px 0 15px;
  text-align:justify;
}
.rule-detail{
  width:100%;
  padding-top:300px;
}
.title-detail{
  width: 100%;
  padding: 0 10px 10px 10px;
}
.title-detail image{
  width: 10px;
  height: 10px;
}
.title-detail span{
  font-size: 12px;
  color: #FCCB1C;
  padding-left: 6px;
}
.detail-bg{
  width: 100%;
  padding-bottom:50px;
}
.detail-bg image{ 
  width: 100%;
}
.btns{
  position: fixed;
  bottom:0;
  left: 0;
  z-index: 30;
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #2D3153;
}
.price-btn{
  float: left;
  width: 50%;
  background-color:#2D3153;
}
.price-btn span{
  color: #fff;
  font-size: 12px;
}
.price-btn b{
  margin-left: 15px;
  color: #FCCB1C;
  font-size: 16px;
  font-family: MicrosoftYaHei;
}
.pay-btn{
  float: right;
  width: 50%;
  margin-top: 5px;
  border-radius: 0;
  border-left: 1px solid #fff;
  background-color:#2D3153;
  font-family: FZZZHONGJW--GB1-0;
  font-size: 16px;
  color: #FCCB1C;
}